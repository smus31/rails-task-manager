<h1>My Tasks</h1>

<i class="fa-solid fa-trash-can"></i>

<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task)%> <i class="fa-solid fa-trash-can"></i> <%= link_to "Delete",
    task_path(task),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
    %></li>

  <% end %>
</ul>

<p class="btn btn-warning"><%= link_to "Create new task", new_task_path%></a>
